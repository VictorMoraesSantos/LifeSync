<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LifeSyncApp"
             xmlns:converters="clr-namespace:LifeSyncApp.Converters"
             xmlns:financialConverters="clr-namespace:LifeSyncApp.Converters.Financial"
             x:Class="LifeSyncApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:PriorityToColorConverter x:Key="PriorityToColorConverter"/>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
            <converters:StatusToLightColorConverter x:Key="StatusToLightColorConverter"/>
            <converters:StatusToIconConverter x:Key="StatusToIconConverter"/>
            <converters:OverdueToColorConverter x:Key="OverdueToColorConverter" />
            <converters:LabelColorToConverter x:Key="LabelColorToConverter"/>
            <converters:LabelColorToLightColorConverter  x:Key="LabelColorToLightColorConverter"/>
            <converters:HasItemsConverter x:Key="HasItemsConverter"/>

            <!-- Tab Converters -->
            <converters:TabBackgroundConverter x:Key="TabBackgroundConverter"/>
            <converters:TabTextColorConverter x:Key="TabTextColorConverter"/>
            <converters:TabIconConverter x:Key="TabIconConverter"/>

            <!-- Financial Converters -->
            <financialConverters:TransactionTypeToColorConverter x:Key="TransactionTypeToColorConverter"/>
            <financialConverters:TransactionTypeToSignConverter x:Key="TransactionTypeToSignConverter"/>
            <financialConverters:TransactionTypeToBackgroundConverter x:Key="TransactionTypeToBackgroundConverter"/>
            <financialConverters:TransactionTypeToBorderConverter x:Key="TransactionTypeToBorderConverter"/>
            <financialConverters:MoneyToStringConverter x:Key="MoneyToStringConverter"/>
            <financialConverters:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
            <financialConverters:PaymentMethodToDisplayConverter x:Key="PaymentMethodToDisplayConverter"/>
            <financialConverters:BoolToPaymentMethodBackgroundConverter x:Key="BoolToPaymentMethodBackgroundConverter"/>
            <financialConverters:BoolToPaymentMethodBorderConverter x:Key="BoolToPaymentMethodBorderConverter"/>
            <financialConverters:BoolToPaymentMethodTextColorConverter x:Key="BoolToPaymentMethodTextColorConverter"/>
            <financialConverters:StringEqualToBackgroundConverter x:Key="StringEqualToBackgroundConverter"/>
            <financialConverters:StringEqualToTextColorConverter x:Key="StringEqualToTextColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
