<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LifeSyncApp.ViewModels.Nutrition"
             x:Class="LifeSyncApp.Views.Nutrition.ManageLiquidModal"
             x:DataType="viewmodel:ManageLiquidViewModel"
             Shell.PresentationMode="ModalNotAnimated"
             BackgroundColor="Transparent">

    <Grid BackgroundColor="#80000000">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CancelCommand}"/>
        </Grid.GestureRecognizers>

        <Border VerticalOptions="End"
                HorizontalOptions="Fill"
                BackgroundColor="White"
                StrokeThickness="0"
                MaximumHeightRequest="480"
                StrokeShape="RoundRectangle 16">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,10" Radius="30" Opacity="0.3"/>
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>

            <Grid RowDefinitions="Auto,*,Auto">

                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="16,0">
                    <Label Text="{Binding Title}"
                           FontSize="16"
                           TextColor="#111"
                           VerticalOptions="Center"/>
                    <ImageButton Grid.Column="1"
                                 Source="close.svg"
                                 BackgroundColor="Transparent"
                                 Padding="8"
                                 Margin="8"
                                 Command="{Binding CancelCommand}"/>
                </Grid>
                <BoxView Grid.Row="0" VerticalOptions="End" HeightRequest="1" BackgroundColor="#E5E5E5"/>

                <!-- Body -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="20" Spacing="20">

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nome do lÃ­quido" FontSize="14" TextColor="#525252"/>
                            <Border BackgroundColor="#F5F5F5" StrokeThickness="0" Padding="16,12" StrokeShape="RoundRectangle 8">
                                <Entry Text="{Binding Name}"
                                       Placeholder="Ex: Ãgua, Suco de laranja"
                                       PlaceholderColor="#A1A1A1"
                                       TextColor="#171717"
                                       FontSize="16"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>

                        <Grid ColumnDefinitions="*,12,*" ColumnSpacing="0">
                            <VerticalStackLayout Grid.Column="0" Spacing="8">
                                <Label Text="Quantidade (ml)" FontSize="14" TextColor="#525252"/>
                                <Border BackgroundColor="#F5F5F5" StrokeThickness="0" Padding="16,12" StrokeShape="RoundRectangle 8">
                                    <Entry Text="{Binding QuantityMlText}"
                                           Placeholder="250"
                                           Keyboard="Numeric"
                                           PlaceholderColor="#A1A1A1"
                                           TextColor="#171717"
                                           FontSize="16"
                                           BackgroundColor="Transparent"/>
                                </Border>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" Spacing="8">
                                <Label Text="Cal por ml" FontSize="14" TextColor="#525252"/>
                                <Border BackgroundColor="#F5F5F5" StrokeThickness="0" Padding="16,12" StrokeShape="RoundRectangle 8">
                                    <Entry Text="{Binding CaloriesPerMlText}"
                                           Placeholder="0"
                                           Keyboard="Numeric"
                                           PlaceholderColor="#A1A1A1"
                                           TextColor="#171717"
                                           FontSize="16"
                                           BackgroundColor="Transparent"/>
                                </Border>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Total preview -->
                        <Border BackgroundColor="#EFF6FF"
                                StrokeThickness="0"
                                Padding="16,12"
                                StrokeShape="RoundRectangle 8">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ’§" FontSize="14" VerticalOptions="Center"/>
                                <Label Text="Total:"
                                       FontSize="14"
                                       TextColor="#525252"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding TotalCalories, StringFormat='{0} cal'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1D4ED8"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Footer -->
                <Grid Grid.Row="2" RowDefinitions="Auto,Auto" Padding="0" RowSpacing="0">
                    <BoxView Grid.Row="0" HeightRequest="1" Color="#E5E5E5"/>
                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="12" Padding="20,16">

                        <Border Grid.Column="0" BackgroundColor="#F5F5F5" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="16" HeightRequest="48">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CancelCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Cancelar" FontSize="16" FontAttributes="Bold" TextColor="#171717"
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Column="1" BackgroundColor="#171717" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="16" HeightRequest="48">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SaveCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Salvar" FontSize="16" FontAttributes="Bold" TextColor="White"
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
