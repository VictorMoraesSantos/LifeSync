<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LifeSyncApp.ViewModels.Nutrition"
             xmlns:meal="clr-namespace:LifeSyncApp.DTOs.Nutrition.Meal"
             xmlns:liquid="clr-namespace:LifeSyncApp.DTOs.Nutrition.Liquid"
             x:Class="LifeSyncApp.Views.Nutrition.NutritionPage"
             x:DataType="viewmodel:NutritionViewModel"
             x:Name="page"
             BackgroundColor="#FAFAFA">

    <Grid>
        <Grid RowDefinitions="Auto,*">

            <!-- Header -->
            <Grid Grid.Row="0"
                  BackgroundColor="White"
                  Padding="16,12"
                  ColumnDefinitions="*,Auto,Auto">

                <Label Grid.Column="0"
                       Text="NutriÃ§Ã£o"
                       FontSize="16"
                       FontAttributes="None"
                       TextColor="#2C3E50"
                       VerticalOptions="Center"/>

                <Border Grid.Column="1"
                        WidthRequest="44"
                        HeightRequest="44"
                        StrokeShape="RoundRectangle 8"
                        Stroke="Transparent"
                        BackgroundColor="#F5F5F5"
                        Margin="0,0,8,0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenManageGoalModalCommand}"/>
                    </Border.GestureRecognizers>
                    <Image Source="data_graph.svg"
                           WidthRequest="20"
                           HeightRequest="20"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>

                <Border Grid.Column="2"
                        WidthRequest="88"
                        HeightRequest="44"
                        StrokeShape="RoundRectangle 8"
                        Stroke="Transparent"
                        BackgroundColor="#171717">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenManageMealModalCommand}"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="6"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center">
                        <Image Source="add.svg"
                               WidthRequest="20"
                               HeightRequest="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                        <Label Text="Nova"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>
            <BoxView Grid.Row="0"
                     HeightRequest="1"
                     Color="#E0E0E0"
                     VerticalOptions="End"/>

            <!-- Scrollable Content -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="16" Spacing="20">

                    <!-- Date Row -->
                    <HorizontalStackLayout Spacing="6">
                        <Image Source="calendar.svg"
                               WidthRequest="14"
                               HeightRequest="14"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding TodayDate}"
                               FontSize="14"
                               TextColor="#525252"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Progress Cards: Calorias + HidrataÃ§Ã£o -->
                    <Grid ColumnDefinitions="*,12,*" ColumnSpacing="0">

                        <!-- Calories Card -->
                        <Border Grid.Column="0"
                                BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E5E5"
                                Padding="16"
                                StrokeShape="RoundRectangle 10">
                            <VerticalStackLayout Spacing="10">
                                <HorizontalStackLayout Spacing="6">
                                    <Label Text="ðŸ”¥" FontSize="14"/>
                                    <Label Text="Calorias"
                                           FontSize="13"
                                           TextColor="#525252"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>

                                <Label Text="{Binding CaloriesPercentage, StringFormat='{0}%'}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#F97316"/>

                                <Border BackgroundColor="#F5F5F5"
                                        StrokeThickness="0"
                                        HeightRequest="8"
                                        StrokeShape="RoundRectangle 8">
                                    <ProgressBar Progress="{Binding CaloriesProgressValue}"
                                                 ProgressColor="#F97316"
                                                 BackgroundColor="Transparent"/>
                                </Border>

                                <Label Text="{Binding CaloriesDetail}"
                                       FontSize="11"
                                       TextColor="#737373"/>
                            </VerticalStackLayout>
                        </Border>

                        <!-- Liquids Card -->
                        <Border Grid.Column="2"
                                BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E5E5"
                                Padding="16"
                                StrokeShape="RoundRectangle 10">
                            <VerticalStackLayout Spacing="10">
                                <HorizontalStackLayout Spacing="6">
                                    <Label Text="ðŸ’§" FontSize="14"/>
                                    <Label Text="HidrataÃ§Ã£o"
                                           FontSize="13"
                                           TextColor="#525252"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>

                                <Label Text="{Binding LiquidsPercentage, StringFormat='{0}%'}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#3B82F6"/>

                                <Border BackgroundColor="#F5F5F5"
                                        StrokeThickness="0"
                                        HeightRequest="8"
                                        StrokeShape="RoundRectangle 8">
                                    <ProgressBar Progress="{Binding LiquidsProgressValue}"
                                                 ProgressColor="#3B82F6"
                                                 BackgroundColor="Transparent"/>
                                </Border>

                                <Label Text="{Binding LiquidsDetail}"
                                       FontSize="11"
                                       TextColor="#737373"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <!-- Meals Card -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E5E5"
                            Padding="16"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="16">

                            <!-- Meals Header -->
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ½ï¸" FontSize="16" VerticalOptions="Center"/>
                                <Label Text="RefeiÃ§Ãµes"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#171717"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding Meals.Count, StringFormat='({0})'}"
                                       FontSize="14"
                                       TextColor="#737373"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <!-- Separator -->
                            <BoxView HeightRequest="1" Color="#F5F5F5"/>

                            <!-- Meals List (BindableLayout to avoid nested scroll issues) -->
                            <Label Text="Nenhuma refeiÃ§Ã£o ainda. Toque em '+' para adicionar."
                                   FontSize="13"
                                   TextColor="#A1A1A1"
                                   HorizontalOptions="Center"
                                   Padding="0,8"
                                   IsVisible="False">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding Meals.Count}" Value="0">
                                        <Setter Property="IsVisible" Value="True"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Meals}" Spacing="8">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="meal:MealDTO">
                                        <Border BackgroundColor="White"
                                                StrokeThickness="1"
                                                Stroke="#E5E5E5"
                                                Padding="14"
                                                StrokeShape="RoundRectangle 10">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:NutritionViewModel}}, Path=OpenMealDetailCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>

                                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">

                                                <!-- Icon -->
                                                <Border Grid.Column="0"
                                                        BackgroundColor="#FFF7ED"
                                                        StrokeThickness="0"
                                                        WidthRequest="36"
                                                        HeightRequest="36"
                                                        Padding="2"
                                                        VerticalOptions="Center"
                                                        StrokeShape="RoundRectangle 8">
                                                    <Label Text="ðŸ½ï¸"
                                                           FontSize="20"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center"/>
                                                </Border>

                                                <!-- Info -->
                                                <VerticalStackLayout Grid.Column="1"
                                                                     Spacing="3"
                                                                     VerticalOptions="Center">
                                                    <Label Text="{Binding Name}"
                                                           FontSize="15"
                                                           FontAttributes="Bold"
                                                           TextColor="#171717"
                                                           LineBreakMode="TailTruncation"/>
                                                    <Label Text="{Binding Description}"
                                                           FontSize="13"
                                                           TextColor="#737373"
                                                           LineBreakMode="TailTruncation">
                                                        <Label.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding Description}" Value="">
                                                                <Setter Property="IsVisible" Value="False"/>
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <HorizontalStackLayout Spacing="8">
                                                        <Label Text="{Binding MealFoods.Count, StringFormat='{0} alimentos'}"
                                                               FontSize="12"
                                                               TextColor="#525252"/>
                                                        <Label Text="{Binding TotalCalories, StringFormat='{0} cal'}"
                                                               FontSize="12"
                                                               TextColor="#EA580C"
                                                               FontAttributes="Bold"/>
                                                    </HorizontalStackLayout>
                                                </VerticalStackLayout>

                                                <!-- Arrow -->
                                                <Label Grid.Column="2"
                                                       Text="â€º"
                                                       FontSize="22"
                                                       TextColor="#A3A3A3"
                                                       VerticalOptions="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Hydration Card -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E5E5"
                            Padding="16"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="16">

                            <!-- Hydration Header -->
                            <Grid ColumnDefinitions="*,Auto">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8" VerticalOptions="Center">
                                    <Label Text="ðŸ’§" FontSize="16" VerticalOptions="Center"/>
                                    <Label Text="HidrataÃ§Ã£o"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#171717"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>

                                <Border Grid.Column="1"
                                        BackgroundColor="#171717"
                                        StrokeThickness="0"
                                        WidthRequest="32"
                                        HeightRequest="32"
                                        Padding="6"
                                        StrokeShape="RoundRectangle 8">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenManageLiquidModalCommand}"/>
                                    </Border.GestureRecognizers>
                                    <Image Source="add.svg" WidthRequest="20" HeightRequest="20"/>
                                </Border>
                            </Grid>

                            <!-- Separator -->
                            <BoxView HeightRequest="1" Color="#F5F5F5"/>

                            <!-- Quick Add Buttons -->
                            <HorizontalStackLayout Spacing="8">
                                <Border BackgroundColor="#EFF6FF" StrokeThickness="0" Padding="12,8" StrokeShape="RoundRectangle 8">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding AddQuickLiquidCommand}" CommandParameter="250"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="250ml" FontSize="13" TextColor="#1D4ED8" FontAttributes="Bold"/>
                                </Border>
                                <Border BackgroundColor="#EFF6FF" StrokeThickness="0" Padding="12,8" StrokeShape="RoundRectangle 8">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding AddQuickLiquidCommand}" CommandParameter="500"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="500ml" FontSize="13" TextColor="#1D4ED8" FontAttributes="Bold"/>
                                </Border>
                                <Border BackgroundColor="#EFF6FF" StrokeThickness="0" Padding="12,8" StrokeShape="RoundRectangle 8">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding AddQuickLiquidCommand}" CommandParameter="750"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="750ml" FontSize="13" TextColor="#1D4ED8" FontAttributes="Bold"/>
                                </Border>
                                <Border BackgroundColor="#EFF6FF" StrokeThickness="0" Padding="12,8" StrokeShape="RoundRectangle 8">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding AddQuickLiquidCommand}" CommandParameter="1000"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="1L" FontSize="13" TextColor="#1D4ED8" FontAttributes="Bold"/>
                                </Border>
                            </HorizontalStackLayout>

                            <!-- Liquids List -->
                            <Label Text="Nenhum lÃ­quido registrado. Use os botÃµes acima para adicionar Ã¡gua."
                                   FontSize="13"
                                   TextColor="#A1A1A1"
                                   HorizontalOptions="Center"
                                   Padding="0,4"
                                   IsVisible="False">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding Liquids.Count}" Value="0">
                                        <Setter Property="IsVisible" Value="True"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Liquids}" Spacing="4">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="liquid:LiquidDTO">
                                        <Grid ColumnDefinitions="*,Auto,Auto" Padding="0,4">

                                            <VerticalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                                                <Label Text="{Binding Name}"
                                                       FontSize="14"
                                                       TextColor="#171717"/>
                                                <HorizontalStackLayout Spacing="8">
                                                    <Label Text="{Binding QuantityMl, StringFormat='{0}ml'}"
                                                           FontSize="12"
                                                           TextColor="#3B82F6"
                                                           FontAttributes="Bold"/>
                                                    <Label Text="{Binding TotalCalories, StringFormat='{0} cal'}"
                                                           FontSize="12"
                                                           TextColor="#525252"/>
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>

                                            <Border Grid.Column="1"
                                                    BackgroundColor="Transparent"
                                                    StrokeThickness="0"
                                                    Padding="8"
                                                    VerticalOptions="Center">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:NutritionViewModel}}, Path=OpenEditLiquidModalCommand}"
                                                        CommandParameter="{Binding .}"/>
                                                </Border.GestureRecognizers>
                                                <Image Source="edit.svg"
                                                       WidthRequest="16"
                                                       HeightRequest="16"/>
                                            </Border>

                                            <Border Grid.Column="2"
                                                    BackgroundColor="Transparent"
                                                    StrokeThickness="0"
                                                    Padding="8"
                                                    VerticalOptions="Center">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:NutritionViewModel}}, Path=DeleteLiquidCommand}"
                                                        CommandParameter="{Binding .}"/>
                                                </Border.GestureRecognizers>
                                                <Image Source="trash.svg"
                                                       WidthRequest="16"
                                                       HeightRequest="16"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Loading overlay -->
        <Grid IsVisible="{Binding IsBusy}" BackgroundColor="#40000000">
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               Color="#171717"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>
