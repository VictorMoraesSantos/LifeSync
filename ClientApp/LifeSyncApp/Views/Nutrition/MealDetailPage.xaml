<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LifeSyncApp.ViewModels.Nutrition"
             xmlns:food="clr-namespace:LifeSyncApp.DTOs.Nutrition.MealFood"
             x:Class="LifeSyncApp.Views.Nutrition.MealDetailPage"
             x:DataType="viewmodel:MealDetailViewModel"
             x:Name="page"
             BackgroundColor="#FAFAFA">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Grid.Row="0"
              BackgroundColor="White"
              Padding="16,12"
              ColumnDefinitions="Auto,*,Auto,Auto">

            <Label Grid.Column="0"
                   Text="â† Voltar"
                   FontSize="16"
                   TextColor="#525252"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
                </Label.GestureRecognizers>
            </Label>

            <!-- Edit button -->
            <Border Grid.Column="2"
                    BackgroundColor="#F5F5F5"
                    StrokeThickness="0"
                    WidthRequest="36"
                    HeightRequest="36"
                    Padding="8"
                    Margin="0,0,8,0"
                    StrokeShape="RoundRectangle 8">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenEditMealModalCommand}"/>
                </Border.GestureRecognizers>
                <Image Source="edit.svg" WidthRequest="20" HeightRequest="20"/>
            </Border>

            <!-- Delete button -->
            <Border Grid.Column="3"
                    BackgroundColor="#FEF2F2"
                    StrokeThickness="0"
                    WidthRequest="36"
                    HeightRequest="36"
                    Padding="8"
                    StrokeShape="RoundRectangle 8">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding DeleteMealCommand}"/>
                </Border.GestureRecognizers>
                <Image Source="trash.svg" WidthRequest="20" HeightRequest="20"/>
            </Border>
        </Grid>
        <BoxView Grid.Row="0" HeightRequest="1" Color="#E0E0E0" VerticalOptions="End"/>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">

                <!-- Meal Info Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E5E5"
                        Padding="16"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding Meal.Name}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#171717"/>

                        <Label Text="{Binding Meal.Description}"
                               FontSize="14"
                               TextColor="#737373">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding Meal.Description}" Value="">
                                    <Setter Property="IsVisible" Value="False"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>

                        <BoxView HeightRequest="1" Color="#F5F5F5" Margin="0,4"/>

                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ”¥" FontSize="14" VerticalOptions="Center"/>
                            <Label Text="{Binding Meal.TotalCalories, StringFormat='{0} calorias'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#EA580C"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Foods Section -->
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <HorizontalStackLayout Grid.Column="0" Spacing="8" VerticalOptions="Center">
                            <Label Text="ðŸ¥—" FontSize="16" VerticalOptions="Center"/>
                            <Label Text="Alimentos"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#171717"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <Border Grid.Column="1"
                                BackgroundColor="#171717"
                                StrokeThickness="0"
                                HeightRequest="36"
                                Padding="12,0"
                                StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenAddFoodModalCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                <Image Source="add.svg" WidthRequest="16" HeightRequest="16"/>
                                <Label Text="Adicionar"
                                       FontSize="14"
                                       TextColor="White"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>

                    <!-- Foods List -->
                    <CollectionView ItemsSource="{Binding Foods}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="food:MealFoodDTO">
                                <Border BackgroundColor="White"
                                        StrokeThickness="1"
                                        Stroke="#E5E5E5"
                                        Padding="14"
                                        Margin="0,0,0,8"
                                        StrokeShape="RoundRectangle 10">

                                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                        <VerticalStackLayout Grid.Column="0" Spacing="3" VerticalOptions="Center">
                                            <Label Text="{Binding Name}"
                                                   FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="#171717"/>
                                            <Label FontSize="12" TextColor="#737373">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Quantity}"/>
                                                        <Span Text="g Ã— "/>
                                                        <Span Text="{Binding CaloriesPerUnit}"/>
                                                        <Span Text=" cal/g"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <Label Text="{Binding TotalCalories, StringFormat='{0} cal'}"
                                                   FontSize="13"
                                                   TextColor="#EA580C"
                                                   FontAttributes="Bold"/>
                                        </VerticalStackLayout>

                                        <Border Grid.Column="1"
                                                BackgroundColor="Transparent"
                                                StrokeThickness="0"
                                                Padding="8"
                                                VerticalOptions="Center">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MealDetailViewModel}}, Path=DeleteFoodCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            <Image Source="trash.svg" WidthRequest="18" HeightRequest="18"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="8" Padding="0,24">
                                <Label Text="Nenhum alimento adicionado"
                                       FontSize="14"
                                       TextColor="#A1A1A1"
                                       HorizontalOptions="Center"/>
                                <Label Text="Toque em 'Adicionar' para incluir alimentos"
                                       FontSize="12"
                                       TextColor="#D4D4D4"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
