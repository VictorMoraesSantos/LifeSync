<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LifeSyncApp.ViewModels.Nutrition"
             x:Class="LifeSyncApp.Views.Nutrition.ManageGoalModal"
             x:DataType="viewmodel:ManageGoalViewModel"
             Shell.PresentationMode="ModalNotAnimated"
             BackgroundColor="Transparent">

    <Grid BackgroundColor="#80000000">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CancelCommand}"/>
        </Grid.GestureRecognizers>

        <Border VerticalOptions="End"
                HorizontalOptions="Fill"
                BackgroundColor="White"
                StrokeThickness="0"
                MaximumHeightRequest="420"
                StrokeShape="RoundRectangle 16">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,10" Radius="30" Opacity="0.3"/>
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>

            <Grid RowDefinitions="Auto,*,Auto">

                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="16,0">
                    <Label Text="Definir Metas"
                           FontSize="16"
                           TextColor="#111"
                           VerticalOptions="Center"/>
                    <ImageButton Grid.Column="1"
                                 Source="close.svg"
                                 BackgroundColor="Transparent"
                                 Padding="8"
                                 Margin="8"
                                 Command="{Binding CancelCommand}"/>
                </Grid>
                <BoxView Grid.Row="0" VerticalOptions="End" HeightRequest="1" BackgroundColor="#E5E5E5"/>

                <!-- Body -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="20" Spacing="20">

                        <!-- Calories Goal -->
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="6">
                                <Label Text="ðŸ”¥" FontSize="14" VerticalOptions="Center"/>
                                <Label Text="Meta de Calorias (kcal)" FontSize="14" TextColor="#525252" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Border BackgroundColor="#F5F5F5" StrokeThickness="0" Padding="16,12" StrokeShape="RoundRectangle 8">
                                <Entry Text="{Binding CaloriesGoalText}"
                                       Placeholder="2000"
                                       Keyboard="Numeric"
                                       PlaceholderColor="#A1A1A1"
                                       TextColor="#171717"
                                       FontSize="16"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Liquids Goal -->
                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="6">
                                <Label Text="ðŸ’§" FontSize="14" VerticalOptions="Center"/>
                                <Label Text="Meta de HidrataÃ§Ã£o (ml)" FontSize="14" TextColor="#525252" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Border BackgroundColor="#F5F5F5" StrokeThickness="0" Padding="16,12" StrokeShape="RoundRectangle 8">
                                <Entry Text="{Binding LiquidsGoalMlText}"
                                       Placeholder="2000"
                                       Keyboard="Numeric"
                                       PlaceholderColor="#A1A1A1"
                                       TextColor="#171717"
                                       FontSize="16"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Footer -->
                <Grid Grid.Row="2" RowDefinitions="Auto,Auto" Padding="0" RowSpacing="0">
                    <BoxView Grid.Row="0" HeightRequest="1" Color="#E5E5E5"/>
                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="12" Padding="20,16">

                        <Border Grid.Column="0" BackgroundColor="#F5F5F5" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="16" HeightRequest="48">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CancelCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Cancelar" FontSize="16" FontAttributes="Bold" TextColor="#171717"
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Column="1" BackgroundColor="#171717" StrokeThickness="0" StrokeShape="RoundRectangle 8" Padding="16" HeightRequest="48">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SaveCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Salvar" FontSize="16" FontAttributes="Bold" TextColor="White"
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
