<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LifeSyncApp.ViewModels.Financial"
             xmlns:models="clr-namespace:LifeSyncApp.Models.Financial"
             x:Class="LifeSyncApp.Views.Financial.ManageTransactionModal"
             x:DataType="viewmodel:ManageTransactionViewModel"
             Shell.PresentationMode="ModalAnimated"
             BackgroundColor="Transparent">

    <!-- Fundo opaco semi-transparente -->
    <Grid BackgroundColor="#80000000">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CancelCommand}"/>
        </Grid.GestureRecognizers>

        <!-- Card do modal centralizado -->
        <Border VerticalOptions="End"
                HorizontalOptions="Fill"
                BackgroundColor="White"
                StrokeThickness="0"
                MaximumHeightRequest="650">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black"  Offset="0,10" Radius="30" Opacity="0.3"/>
            </Border.Shadow>

            <!-- Previne que o tap no card feche o modal -->
            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>

            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="16,0">
                    <Label Text="{Binding ModalTitle}"
                           FontSize="16"
                           FontAttributes="None"
                           TextColor="#111"
                           VerticalOptions="Center"/>

                    <ImageButton Grid.Column="1" 
                                 Source="close.svg" 
                                 BackgroundColor="Transparent" 
                                 Padding="8"  
                                 Margin="8" 
                                 Command="{Binding CancelCommand}" />
                </Grid>
                
                <BoxView Grid.Row="1" HeightRequest="1" Color="#EEEEEE"/>

                <!-- Divider -->
                <BoxView Grid.Row="0"
                         VerticalOptions="End"
                         HeightRequest="1"
                         BackgroundColor="#E5E5E5"/>

                <!-- Form Content -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout Padding="20" Spacing="20">

                        <!-- Valor -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Valor"
                                   FontSize="14"
                                   TextColor="#525252"/>
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding Amount}"
                                       Placeholder="R$ 0,00"
                                       Keyboard="Numeric"
                                       PlaceholderColor="#A1A1A1"
                                       TextColor="#171717"
                                       FontSize="16"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Descrição -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Descrição" FontSize="14" TextColor="#525252"/>
                            <Border BackgroundColor="#F5F5F5" StrokeThickness="0" Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding Description}"
                                       Placeholder="Ex: Almoço no restaurante"
                                       PlaceholderColor="#A1A1A1"
                                       TextColor="#171717"
                                       FontSize="16"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Categoria -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Categoria (opcional)" FontSize="14" TextColor="#525252"/>
                            <Border BackgroundColor="#F5F5F5" StrokeThickness="0" Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Picker ItemsSource="{Binding Categories}"
                                        ItemDisplayBinding="{Binding Name}"
                                        SelectedItem="{Binding SelectedCategory}"
                                        Title="Selecione"
                                        TextColor="#171717"
                                        FontSize="16"
                                        BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Método de Pagamento -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Método de Pagamento"
                                   FontSize="14"
                                   TextColor="#525252"/>

                            <FlexLayout BindableLayout.ItemsSource="{Binding PaymentMethods}"
                                        Wrap="Wrap"
                                        JustifyContent="Start"
                                        AlignItems="Start">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="models:SelectablePaymentMethodItem">
                                        <Border BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToPaymentMethodBackgroundConverter}}"
                                                StrokeThickness="1"
                                                Stroke="{Binding IsSelected, Converter={StaticResource BoolToPaymentMethodBorderConverter}}"
                                                Padding="12"
                                                HeightRequest="80"
                                                WidthRequest="110"
                                                Margin="0,0,8,8">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8"/>
                                            </Border.StrokeShape>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ManageTransactionViewModel}}, Path=TogglePaymentMethodCommand}"
                                                                      CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            <VerticalStackLayout Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image Source="{Binding IconSource}" WidthRequest="24" HeightRequest="24"/>
                                                <Label Text="{Binding DisplayName}"
                                                       FontSize="12"
                                                       TextColor="{Binding IsSelected, Converter={StaticResource BoolToPaymentMethodTextColorConverter}}"
                                                       HorizontalOptions="Center"
                                                       HorizontalTextAlignment="Center"
                                                       MaxLines="2"
                                                       LineBreakMode="WordWrap"/>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </VerticalStackLayout>

                        <!-- Data da Transação -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Data da Transação"
                                   FontSize="14"
                                   TextColor="#525252"/>
                            <Border BackgroundColor="#F5F5F5"
                                    StrokeThickness="0"
                                    Padding="16,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <DatePicker Date="{Binding TransactionDate}"
                                            TextColor="#171717"
                                            FontSize="16"
                                            BackgroundColor="Transparent"
                                            Format="dd/MM/yyyy"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Tipo -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Tipo"
                                   FontSize="14"
                                   TextColor="#525252"/>
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                                <!-- Receita -->
                                <Border Grid.Column="0"
                                        BackgroundColor="{Binding TransactionType, Converter={StaticResource TransactionTypeToBackgroundConverter}, ConverterParameter=Income}"
                                        StrokeThickness="2"
                                        Stroke="{Binding TransactionType, Converter={StaticResource TransactionTypeToBorderConverter}, ConverterParameter=Income}"
                                        Padding="16"
                                        HeightRequest="56">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SetTransactionTypeCommand}"
                                                              CommandParameter="Income"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="Receita"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#00A63E"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>

                                <!-- Despesa -->
                                <Border Grid.Column="1"
                                        BackgroundColor="{Binding TransactionType, Converter={StaticResource TransactionTypeToBackgroundConverter}, ConverterParameter=Expense}"
                                        StrokeThickness="2"
                                        Stroke="{Binding TransactionType, Converter={StaticResource TransactionTypeToBorderConverter}, ConverterParameter=Expense}"
                                        Padding="16"
                                        HeightRequest="56">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SetTransactionTypeCommand}"
                                                              CommandParameter="Expense"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="Despesa"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#E7000B"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                            </Grid>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Footer com Botões - Grid.Row="2" -->
                <Grid Grid.Row="2" RowDefinitions="Auto,Auto" Padding="0" RowSpacing="0">
                    <!-- Divider -->
                    <BoxView Grid.Row="0" HeightRequest="1" Color="#E5E5E5"/>

                    <!-- Botões -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="12" Padding="20,16">
                        <Border Grid.Column="0"
                                BackgroundColor="#F5F5F5"
                                StrokeThickness="0"
                                Padding="16"
                                HeightRequest="48">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CancelCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Cancelar"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#171717"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Column="1"
                                BackgroundColor="#171717"
                                StrokeThickness="0"
                                Padding="16"
                                HeightRequest="48">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SaveCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Salvar"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
