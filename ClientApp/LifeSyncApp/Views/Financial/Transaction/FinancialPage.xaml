<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LifeSyncApp.ViewModels.Financial"
             xmlns:dto="clr-namespace:LifeSyncApp.DTOs.Financial"
             xmlns:transaction="clr-namespace:LifeSyncApp.DTOs.Financial.Transaction"
             x:Class="LifeSyncApp.Views.Financial.FinancialPage"
             x:DataType="viewmodel:FinancialViewModel"
             x:Name="page"
             BackgroundColor="#FAFAFA">

    <Grid>
        <Grid RowDefinitions="Auto,*">
            <Grid Grid.Row="0"
                  BackgroundColor="White"
                  Padding="16, 12"
                  ColumnDefinitions="*, auto ,auto">

                <Label Grid.Column="0"
                       Text="Financeiro"
                       FontSize="16"
                       FontAttributes="None"
                       TextColor="#2C3E50"
                       VerticalOptions="Center"/>

                <Border Grid.Column="1"
                        WidthRequest="44"
                        HeightRequest="44"
                        StrokeShape="RoundRectangle 8"
                        Stroke="Transparent"
                        BackgroundColor="#F5F5F5"
                        Margin="0,0,8,0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToCategoriesCommand}"/>
                    </Border.GestureRecognizers>

                    <Image Source="category.svg"
                           WidthRequest="20"
                           HeightRequest="20"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>

                <Border Grid.Column="2"
                        WidthRequest="88"
                        HeightRequest="44"
                        StrokeShape="RoundRectangle 8"
                        Stroke="Transparent"
                        BackgroundColor="#171717">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenManageTransactionModalCommand}"/>
                    </Border.GestureRecognizers>

                    <HorizontalStackLayout Spacing="6"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center">
                        <Image Source="add.svg"
                               WidthRequest="20"
                               HeightRequest="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <Label Text="Nova"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>
            <BoxView Grid.Row="0"
                     HeightRequest="1"
                     Color="#E0E0E0"
                     VerticalOptions="End"/>

            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="16"
                                     Spacing="24">
                    <Border BackgroundColor="#171717"
                            StrokeThickness="0"
                            Padding="24,24,24,16"
                            StrokeShape="RoundRectangle 10">

                        <VerticalStackLayout Spacing="8">
                            <HorizontalStackLayout Spacing="8">
                                <Image Source="wallet.svg"
                                       WidthRequest="16"
                                       HeightRequest="16"/>

                                <Label Text="Saldo de fevereiro"
                                       FontSize="14"
                                       TextColor="#D4D4D4"/>
                            </HorizontalStackLayout>

                            <Label Text="{Binding Balance, StringFormat='R$ {0:N2}'}"
                                   FontSize="36"
                                   FontAttributes="Bold"
                                   TextColor="White"/>

                            <Label Text="{Binding TransactionCount, StringFormat='{0} transações este mês'}"
                                   FontSize="14"
                                   TextColor="#D4D4D4"/>
                        </VerticalStackLayout>
                    </Border>

                    <Grid ColumnDefinitions="*,12,*" 
                          ColumnSpacing="0">
                        <Border Grid.Column="0"
                                BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E5E5"
                                Padding="17"
                                StrokeShape="RoundRectangle 10">

                            <VerticalStackLayout Spacing="12">
                                <HorizontalStackLayout Spacing="8">
                                    <Border BackgroundColor="#F0FDF4"
                                            StrokeThickness="0"
                                            Padding="8"
                                            WidthRequest="32"
                                            HeightRequest="32"
                                            StrokeShape="RoundRectangle 10">

                                        <Image Source="arrow_circle_up.svg"/>
                                    </Border>

                                    <Label Text="Receitas"
                                           FontSize="14"
                                           TextColor="#525252"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>

                                <Label Text="{Binding TotalIncome, StringFormat='R$ {0:N2}'}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#00A63E"/>

                                <Label Text="{Binding IncomeCount, StringFormat='{0} entradas'}"
                                       FontSize="12"
                                       TextColor="#737373"/>
                            </VerticalStackLayout>
                        </Border>

                        <Border Grid.Column="2"
                                BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E5E5"
                                Padding="17"
                                StrokeShape="RoundRectangle 10">

                            <VerticalStackLayout Spacing="12">
                                <HorizontalStackLayout Spacing="8">
                                    <Border BackgroundColor="#FEF2F2"
                                            StrokeThickness="0"
                                            Padding="8"
                                            WidthRequest="32"
                                            HeightRequest="32"
                                            StrokeShape="RoundRectangle 10">

                                        <Image Source="arrow_circle_down.svg"/>
                                    </Border>

                                    <Label Text="Despesas"
                                           FontSize="14"
                                           TextColor="#525252"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>

                                <Label Text="{Binding TotalExpense, StringFormat='R$ {0:N2}'}"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#E7000B"/>

                                <Label Text="{Binding ExpenseCount, StringFormat='{0} saídas'}"
                                       FontSize="12"
                                       TextColor="#737373"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8"
                                               Padding="0,0,0,0">
                            <Image Source="data_graph.svg"
                                   WidthRequest="16"
                                   HeightRequest="16"
                                   VerticalOptions="Center"/>

                            <Label Text="Top Categorias de Despesas"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#171717"/>
                        </HorizontalStackLayout>

                        <ScrollView Orientation="Horizontal"
                                    HorizontalScrollBarVisibility="Never">
                            <HorizontalStackLayout Spacing="12"
                                                   BindableLayout.ItemsSource="{Binding TopCategories}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodel:CategoryExpense">
                                        <Border BackgroundColor="White"
                                                StrokeThickness="1"
                                                Stroke="#E5E5E5"
                                                Padding="17"
                                                WidthRequest="272"
                                                StrokeShape="RoundRectangle 10">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding BindingContext.OpenCategoryTransactionsCommand, Source={x:Reference page}}"
                                                    CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>

                                            <VerticalStackLayout Spacing="8">
                                                <Label Text="{Binding CategoryName}"
                                                       FontSize="14"
                                                       TextColor="#404040"/>

                                                <Label Text="{Binding Amount, StringFormat='R$ {0:N2}'}"
                                                       FontSize="22"
                                                       FontAttributes="Bold"
                                                       TextColor="#171717"/>

                                                <Border BackgroundColor="#F5F5F5"
                                                        StrokeThickness="0"
                                                        HeightRequest="8"
                                                        StrokeShape="RoundRectangle 8">
                                                    <ProgressBar Progress="{Binding ProgressValue}"
                                                                 ProgressColor="#171717"
                                                                 BackgroundColor="Transparent"/>
                                                </Border>

                                                <Label Text="{Binding Percentage, StringFormat='{0:F1}% do total de despesas'}"
                                                       FontSize="12"
                                                       TextColor="#737373"/>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </HorizontalStackLayout>
                        </ScrollView>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*, 12, *">
                        <Border Grid.Column="0"
                                BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E5E5"
                                Padding="17"
                                StrokeShape="RoundRectangle 10">

                            <VerticalStackLayout Spacing="8">
                                <HorizontalStackLayout Spacing="8">
                                    <Image Source="trending_up.svg"
                                           WidthRequest="16"
                                           HeightRequest="16"/>

                                    <Label Text="Maior receita" 
                                           FontSize="14"
                                           TextColor="#525252"/>
                                </HorizontalStackLayout>

                                <Label Text="{Binding HighestIncome, StringFormat='R$ {0:N2}'}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#171717"/>
                            </VerticalStackLayout>
                        </Border>

                        <Border Grid.Column="2"
                                BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E5E5E5"
                                Padding="17"
                                StrokeShape="RoundRectangle 10">

                            <VerticalStackLayout Spacing="8">
                                <HorizontalStackLayout Spacing="8">
                                    <Image Source="trending_down.svg"
                                           WidthRequest="16"
                                           HeightRequest="16"/>

                                    <Label Text="Maior despesa"
                                           FontSize="14"
                                           TextColor="#525252"/>
                                </HorizontalStackLayout>

                                <Label Text="{Binding HighestExpense, StringFormat='R$ {0:N2}'}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#171717"/>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Transações Recentes"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#171717"/>

                            <Label Grid.Column="1"
                                   Text="Ver todas →"
                                   FontSize="14"
                                   TextColor="#525252">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ViewAllTransactionsCommand}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>

                        <CollectionView ItemsSource="{Binding RecentTransactions}" 
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="transaction:TransactionDTO">
                                    <Border BackgroundColor="White"
                                            StrokeThickness="1"
                                            Stroke="#E5E5E5"
                                            Padding="13"
                                            Margin="0,0,0,8"
                                            StrokeShape="RoundRectangle 10">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:FinancialViewModel}}, Path=OpenDetailCommand}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>

                                        <Grid ColumnDefinitions="Auto,*,Auto"
                                              ColumnSpacing="12">
                                            <Border Grid.Column="0"
                                                    StrokeThickness="0"
                                                    WidthRequest="32"
                                                    HeightRequest="32"
                                                    Padding="6"
                                                    VerticalOptions="Center">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10"/>
                                                </Border.StrokeShape>
                                                <Border.Triggers>
                                                    <DataTrigger TargetType="Border"
                                                                 Binding="{Binding TransactionType}"
                                                                 Value="Income">
                                                        <Setter Property="BackgroundColor"
                                                                Value="#F0FDF4"/>
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Border"
                                                                 Binding="{Binding TransactionType}"
                                                                 Value="Expense">
                                                        <Setter Property="BackgroundColor"
                                                                Value="#FEF2F2"/>
                                                    </DataTrigger>
                                                </Border.Triggers>
                                                <Image>
                                                    <Image.Triggers>
                                                        <DataTrigger TargetType="Image"
                                                                     Binding="{Binding TransactionType}"
                                                                     Value="Income">
                                                            <Setter Property="Source"
                                                                    Value="arrow_circle_up.svg"/>
                                                        </DataTrigger>
                                                        <DataTrigger TargetType="Image"
                                                                     Binding="{Binding TransactionType}"
                                                                     Value="Expense">
                                                            <Setter Property="Source" 
                                                                    Value="arrow_circle_down.svg"/>
                                                        </DataTrigger>
                                                    </Image.Triggers>
                                                </Image>
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding Description}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#171717"
                                                       LineBreakMode="TailTruncation"/>
                                                <HorizontalStackLayout Spacing="8">
                                                    <Label Text="{Binding PaymentMethod}" FontSize="12" TextColor="#737373"/>
                                                    <Label Text="•" FontSize="16" TextColor="#D4D4D4"/>
                                                    <Label Text="{Binding Category.Name}" FontSize="12" TextColor="#737373"/>
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label TextColor="{Binding TransactionType, Converter={StaticResource TransactionTypeToColorConverter}}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       HorizontalOptions="End">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding TransactionType, Converter={StaticResource TransactionTypeToSignConverter}}"/>
                                                            <Span Text="{Binding Amount, Converter={StaticResource MoneyToStringConverter}}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label Text="{Binding TransactionDate, StringFormat='{0:dd} de {0:MMM}'}"
                                                       FontSize="12"
                                                       TextColor="#A1A1A1"
                                                       HorizontalOptions="End"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
