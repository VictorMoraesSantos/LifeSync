<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:enums="clr-namespace:LifeSyncApp.Models.TaskManager.Enums"
             xmlns:viewmodels="clr-namespace:LifeSyncApp.ViewModels.TaskManager"
             x:Class="LifeSyncApp.Views.TaskManager.TaskLabel.ManageTaskLabelModal"
             x:DataType="viewmodels:TaskLabelViewModel"
             Shell.PresentationMode="ModalNotAnimated"
             BackgroundColor="Transparent">

    <Grid BackgroundColor="#80000000">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseManageLabelModalCommand}"/>
        </Grid.GestureRecognizers>

        <Border VerticalOptions="End"
                HorizontalOptions="Fill"
                BackgroundColor="White"
                StrokeThickness="0"
                MaximumHeightRequest="520">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,10" Radius="30" Opacity="0.3"/>
            </Border.Shadow>

            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>

            <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="0">

                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="16,12">
                    <Label Text="{Binding ModalTitle}"
                           FontSize="16"
                           FontAttributes="None"
                           TextColor="#111"
                           VerticalOptions="Center"/>

                    <ImageButton Grid.Column="1"
                                 Source="close.svg"
                                 BackgroundColor="Transparent"
                                 Padding="8"
                                 Command="{Binding CloseManageLabelModalCommand}" />
                </Grid>

                <!-- Divider -->
                <BoxView Grid.Row="1" HeightRequest="1" Color="#E5E5E5"/>

                <!-- Form Content -->
                <ScrollView Grid.Row="2" Padding="20,16">
                    <VerticalStackLayout Spacing="16">

                        <!-- Label Name -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nome da Etiqueta" FontSize="14" TextColor="#525252"/>
                            <Border Stroke="#E5E7EB" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="White">
                                <Entry Placeholder="Ex: Trabalho, Pessoal, Urgente..."
                                       PlaceholderColor="#9CA3AF"
                                       Text="{Binding LabelName}"
                                       BackgroundColor="Transparent"
                                       Margin="12,4"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Color Selection -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Escolha uma cor" FontSize="14" TextColor="#525252"/>

                            <Grid ColumnDefinitions="*,*,*,*,*"
                                  RowDefinitions="Auto,Auto"
                                  ColumnSpacing="12"
                                  RowSpacing="12"
                                  Margin="0,4">

                                <!-- Row 1 -->
                                <Border Grid.Column="0"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#9C27B0"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Purple}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Purple}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <Border Grid.Column="1"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#E91E63"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Pink}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Pink}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <Border Grid.Column="2"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#2196F3"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Blue}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Blue}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <Border Grid.Column="3"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#795548"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Brown}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Brown}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <Border Grid.Column="4"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#F44336"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Red}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Red}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <!-- Row 2 -->
                                <Border Grid.Row="1" Grid.Column="0"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#9E9E9E"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Gray}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Gray}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="1"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#4CAF50"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Green}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Green}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="2"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#FF9800"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Orange}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Orange}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="3"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeShape="RoundRectangle 28"
                                        BackgroundColor="#FFC107"
                                        Stroke="Transparent"
                                        StrokeThickness="3">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SelectColorCommand}"
                                                              CommandParameter="{x:Static enums:LabelColor.Yellow}"/>
                                    </Border.GestureRecognizers>
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding SelectedLabelColor}"
                                                     Value="{x:Static enums:LabelColor.Yellow}">
                                            <Setter Property="Stroke" Value="#111"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>

                            </Grid>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Footer Buttons -->
                <Grid Grid.Row="3" RowDefinitions="Auto,Auto" Padding="0" RowSpacing="0">
                    <BoxView Grid.Row="0" HeightRequest="1" Color="#E5E5E5"/>

                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="12" Padding="20,16">
                        <Border Grid.Column="0"
                                BackgroundColor="#F5F5F5"
                                StrokeThickness="0"
                                Padding="16"
                                HeightRequest="48">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CloseManageLabelModalCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Cancelar"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#171717"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Column="1"
                                BackgroundColor="#171717"
                                StrokeThickness="0"
                                Padding="16"
                                HeightRequest="48">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SaveLabelCommand}"/>
                            </Border.GestureRecognizers>
                            <Border.Triggers>
                                <DataTrigger TargetType="Border"
                                             Binding="{Binding CanSaveLabel}"
                                             Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </DataTrigger>
                            </Border.Triggers>
                            <Label Text="{Binding SaveButtonText}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</ContentPage>
