<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LifeSyncApp.Controls.BottomSheet"
             x:Name="this">
    
    <Grid RowDefinitions="*,Auto">
        <!-- Overlay -->
        <BoxView Grid.Row="0"
                 BackgroundColor="{StaticResource Overlay}"
                 Opacity="{Binding OverlayOpacity, Source={x:Reference this}}"
                 IsVisible="{Binding IsOpen, Source={x:Reference this}}">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand, Source={x:Reference this}}" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Bottom Sheet Container -->
        <Border Grid.Row="1"
                BackgroundColor="{StaticResource BackgroundPrimary}"
                StrokeShape="RoundRectangle 24,24,0,0"
                Stroke="Transparent"
                TranslationY="{Binding TranslationY, Source={x:Reference this}}"
                MaximumHeightRequest="{Binding MaxHeight, Source={x:Reference this}}">
            
            <Grid RowDefinitions="Auto,*" Padding="0">
                <!-- Handle -->
                <BoxView Grid.Row="0"
                         WidthRequest="40"
                         HeightRequest="4"
                         CornerRadius="2"
                         BackgroundColor="{StaticResource BorderPrimary}"
                         Margin="0,12,0,0"
                         HorizontalOptions="Center" />

                <!-- Content -->
                <Grid Grid.Row="1" Padding="24,16,24,24">
                    <ContentPresenter Content="{Binding Content, Source={x:Reference this}}" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
    
</ContentView>
