<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LifeSyncApp.Controls.BottomSheet"
             x:Name="BottomSheetControl">
    
    <Grid IsVisible="{Binding IsOpen, Source={x:Reference BottomSheetControl}}">
        
        <!-- Overlay Background -->
        <BoxView BackgroundColor="{StaticResource OverlayColor}">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand, Source={x:Reference BottomSheetControl}}" />
            </BoxView.GestureRecognizers>
        </BoxView>
        
        <!-- Bottom Sheet Container -->
        <Border BackgroundColor="{StaticResource BackgroundPrimary}"
                StrokeShape="RoundRectangle 24,24,0,0"
                Stroke="Transparent"
                VerticalOptions="End"
                MaximumHeightRequest="{Binding MaxHeight, Source={x:Reference BottomSheetControl}}">
            
            <Grid RowDefinitions="Auto,*" Padding="0">
                
                <!-- Drag Handle -->
                <Border Grid.Row="0"
                        WidthRequest="40"
                        HeightRequest="4"
                        BackgroundColor="{StaticResource Gray300}"
                        StrokeShape="RoundRectangle 2"
                        Stroke="Transparent"
                        Margin="0,12,0,16"
                        HorizontalOptions="Center" />
                
                <!-- Content Area -->
                <Grid Grid.Row="1" Padding="20,0,20,20">
                    <ContentPresenter Content="{Binding Content, Source={x:Reference BottomSheetControl}}" />
                </Grid>
                
            </Grid>
            
        </Border>
        
    </Grid>
    
</ContentView>
