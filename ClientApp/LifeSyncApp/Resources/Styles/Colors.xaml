<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors -->
    <Color x:Key="Primary">#171717</Color>
    <Color x:Key="PrimaryDark">#0A0A0A</Color>
    <Color x:Key="PrimaryLight">#2C2C2C</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F8F9FA</Color>
    <Color x:Key="BackgroundTertiary">#F5F5F5</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceVariant">#F0F0F0</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#2C3E50</Color>
    <Color x:Key="TextSecondary">#7F8C8D</Color>
    <Color x:Key="TextTertiary">#95A5A6</Color>
    <Color x:Key="TextDisabled">#BDC3C7</Color>
    <Color x:Key="TextInverse">#FFFFFF</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderPrimary">#E0E0E0</Color>
    <Color x:Key="BorderSecondary">#E6E6E6</Color>
    <Color x:Key="BorderLight">#F0F0F0</Color>

    <!-- Status Colors -->
    <Color x:Key="StatusPending">#95A5A6</Color>
    <Color x:Key="StatusPendingLight">#ECF0F1</Color>
    <Color x:Key="StatusInProgress">#F39C12</Color>
    <Color x:Key="StatusInProgressLight">#FEF5E7</Color>
    <Color x:Key="StatusCompleted">#27AE60</Color>
    <Color x:Key="StatusCompletedLight">#E8F8F5</Color>

    <!-- Priority Colors -->
    <Color x:Key="PriorityLow">#3498DB</Color>
    <Color x:Key="PriorityMedium">#F39C12</Color>
    <Color x:Key="PriorityHigh">#E74C3C</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Success">#27AE60</Color>
    <Color x:Key="Warning">#F39C12</Color>
    <Color x:Key="Error">#E74C3C</Color>
    <Color x:Key="Info">#3498DB</Color>

    <!-- Label Colors -->
    <Color x:Key="LabelRed">#E74C3C</Color>
    <Color x:Key="LabelRedLight">#FADBD8</Color>
    <Color x:Key="LabelOrange">#E67E22</Color>
    <Color x:Key="LabelOrangeLight">#F8E6D5</Color>
    <Color x:Key="LabelYellow">#F1C40F</Color>
    <Color x:Key="LabelYellowLight">#FCF3CF</Color>
    <Color x:Key="LabelGreen">#27AE60</Color>
    <Color x:Key="LabelGreenLight">#D5F4E6</Color>
    <Color x:Key="LabelBlue">#3498DB</Color>
    <Color x:Key="LabelBlueLight">#D6EAF8</Color>
    <Color x:Key="LabelPurple">#9B59B6</Color>
    <Color x:Key="LabelPurpleLight">#E8DAEF</Color>
    <Color x:Key="LabelPink">#E91E63</Color>
    <Color x:Key="LabelPinkLight">#F8BBD0</Color>
    <Color x:Key="LabelGray">#7F8C8D</Color>
    <Color x:Key="LabelGrayLight">#D5D8DC</Color>

    <!-- Overlay -->
    <Color x:Key="OverlayDark">#000000</Color>
    <Color x:Key="OverlayLight">#FFFFFF</Color>

    <!-- Shadows -->
    <Color x:Key="ShadowColor">#000000</Color>

</ResourceDictionary>