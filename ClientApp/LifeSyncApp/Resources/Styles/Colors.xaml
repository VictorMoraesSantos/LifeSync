<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4F46E5</Color>
    <Color x:Key="PrimaryLight">#818CF8</Color>
    <Color x:Key="PrimaryLighter">#C7D2FE</Color>
    
    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#10B981</Color>
    <Color x:Key="SecondaryDark">#059669</Color>
    <Color x:Key="SecondaryLight">#34D399</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Accent">#F59E0B</Color>
    <Color x:Key="AccentDark">#D97706</Color>
    <Color x:Key="AccentLight">#FBBF24</Color>
    
    <!-- Neutral Colors -->
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>
    
    <!-- Semantic Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F9FAFB</Color>
    <Color x:Key="BackgroundTertiary">#F3F4F6</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#111827</Color>
    <Color x:Key="TextSecondary">#6B7280</Color>
    <Color x:Key="TextTertiary">#9CA3AF</Color>
    <Color x:Key="TextInverse">#FFFFFF</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderPrimary">#E5E7EB</Color>
    <Color x:Key="BorderSecondary">#D1D5DB</Color>
    
    <!-- Status Colors -->
    <Color x:Key="StatusPending">#F59E0B</Color>
    <Color x:Key="StatusInProgress">#3B82F6</Color>
    <Color x:Key="StatusCompleted">#10B981</Color>
    <Color x:Key="StatusCancelled">#6B7280</Color>
    
    <!-- Priority Colors -->
    <Color x:Key="PriorityLow">#10B981</Color>
    <Color x:Key="PriorityMedium">#F59E0B</Color>
    <Color x:Key="PriorityHigh">#EF4444</Color>
    
    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#00000020</Color>
    <Color x:Key="OverlayColor">#00000080</Color>

</ResourceDictionary>
