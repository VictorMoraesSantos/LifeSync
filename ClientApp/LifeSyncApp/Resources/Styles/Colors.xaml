<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4F46E5</Color>
    <Color x:Key="PrimaryLight">#818CF8</Color>
    <Color x:Key="PrimaryLighter">#C7D2FE</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F9FAFB</Color>
    <Color x:Key="BackgroundTertiary">#F3F4F6</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#111827</Color>
    <Color x:Key="TextSecondary">#6B7280</Color>
    <Color x:Key="TextTertiary">#9CA3AF</Color>
    <Color x:Key="TextDisabled">#D1D5DB</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderPrimary">#E5E7EB</Color>
    <Color x:Key="BorderSecondary">#F3F4F6</Color>
    
    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="SuccessLight">#D1FAE5</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="WarningLight">#FEF3C7</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="ErrorLight">#FEE2E2</Color>
    <Color x:Key="Info">#3B82F6</Color>
    <Color x:Key="InfoLight">#DBEAFE</Color>
    
    <!-- Priority Colors -->
    <Color x:Key="PriorityHigh">#DC2626</Color>
    <Color x:Key="PriorityMedium">#F59E0B</Color>
    <Color x:Key="PriorityLow">#10B981</Color>
    
    <!-- Task Status Colors -->
    <Color x:Key="StatusPending">#6B7280</Color>
    <Color x:Key="StatusInProgress">#3B82F6</Color>
    <Color x:Key="StatusCompleted">#10B981</Color>
    
    <!-- Shadow Colors -->
    <Color x:Key="Shadow">#00000015</Color>
    <Color x:Key="Overlay">#00000080</Color>
    
    <!-- Gradients -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6366F1" Offset="0.0" />
        <GradientStop Color="#8B5CF6" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>
