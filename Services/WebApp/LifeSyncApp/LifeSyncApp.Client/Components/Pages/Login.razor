@page "/login"
@using LifeSyncApp.Client.Models
@using LifeSyncApp.Client.Services
@using LifeSyncApp.Client.Services.Contracts

@inject IAuthService Auth
@inject NavigationManager Nav

<PageTitle>Login</PageTitle>

<div class="auth-container" style="display:flex;align-items:center;justify-content:center;min-height:calc(100vh - 64px);">
    <div class="card" style="max-width:420px;width:100%;padding:1.25rem;">
        <div class="card-header">
            <h3 class="card-title">Entrar no LifeSync</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(_error))
            {
                <div class="alert alert-error" role="alert">@_error</div>
            }

            <EditForm Model="_model" OnValidSubmit="OnSubmit">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <InputText class="form-control" @bind-Value="_model.Email" autocomplete="username" />
                </div>
                <div class="form-group">
                    <label class="form-label">Senha</label>
                    <InputText class="form-control" Type="password" @bind-Value="_model.Password" autocomplete="current-password" />
                </div>
                <button class="btn btn-primary" type="submit" disabled="@_loading" style="width:100%">
                    @if (_loading)
                    {
                        <span class="loading" role="status" aria-hidden="true"></span>
                        <span style="margin-left:.5rem;">Entrando...</span>
                    }
                    else
                    {
                        <span>Entrar</span>
                    }
                </button>
            </EditForm>

            <div style="margin-top:1rem;color:var(--text-secondary);font-size:.9rem;">
                Não tem conta? <a href="/register">Crie uma agora</a>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel _model = new();
    private bool _loading;
    private string? _error;

    [SupplyParameterFromQuery] public string? RedirectUrl { get; set; }

    private async Task OnSubmit()
    {
        _error = null;
        _loading = true;
        try
        {
            var result = await Auth.LoginAsync(new LoginRequest { Email = _model.Email ?? string.Empty, Password = _model.Password ?? string.Empty });
            if (result.Success)
            {
                var target = string.IsNullOrWhiteSpace(RedirectUrl) ? "/" : RedirectUrl!;
                Nav.NavigateTo(target, replace: true);
            }
            else
            {
                _error = result.Errors?.FirstOrDefault() ?? "Falha no login";
            }
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private class LoginModel
    {
        public string? Email { get; set; }
        public string? Password { get; set; }
    }
}
