@page "/gym"
@using LifeSyncApp.Client.Services
@inject IGymService GymService

<PageTitle>Academia - LifeSync</PageTitle>

<div class="content-header">
    <div>
        <h1 class="page-title">Academia</h1>
        <p class="page-description">Gerencie seus treinos e exercícios</p>
    </div>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-header">
            <div>
                <div class="stat-value">@totalWorkouts</div>
                <div class="stat-label">Treinos Totais</div>
            </div>
            <div class="stat-icon primary">
                <span>???</span>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div>
                <div class="stat-value">@weekWorkouts</div>
                <div class="stat-label">Treinos esta Semana</div>
            </div>
            <div class="stat-icon success">
                <span>??</span>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div>
                <div class="stat-value">@routinesCount</div>
                <div class="stat-label">Rotinas Ativas</div>
            </div>
            <div class="stat-icon warning">
                <span>??</span>
            </div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-header">
            <div>
                <div class="stat-value">@exercisesCount</div>
                <div class="stat-label">Exercícios</div>
            </div>
            <div class="stat-icon secondary">
                <span>??</span>
            </div>
        </div>
    </div>
</div>

<div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; margin-bottom: 1.5rem;">
    <button class="btn btn-primary" style="height: 60px;" @onclick="StartWorkout">
        ??? Iniciar Treino
    </button>
    <button class="btn btn-secondary" style="height: 60px;" @onclick="ManageRoutines">
        ?? Gerenciar Rotinas
    </button>
    <button class="btn btn-secondary" style="height: 60px;" @onclick="ManageExercises">
        ?? Gerenciar Exercícios
    </button>
</div>

<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Treinos Recentes</h3>
        </div>
        <div class="card-body">
            @if (isLoadingWorkouts)
            {
                <div style="text-align: center; padding: 2rem;">
                    <div class="loading"></div>
                    <p style="margin-top: 1rem;">Carregando...</p>
                </div>
            }
            else if (recentWorkouts.Any())
            {
                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    @foreach (var workout in recentWorkouts.Take(5))
                    {
                        <div style="padding: 1rem; background: var(--color-background-tertiary); border-radius: var(--border-radius);">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                <h4 style="margin: 0;">@workout.RoutineName</h4>
                                <span class="badge badge-primary">@workout.Duration min</span>
                            </div>
                            <p style="font-size: 0.875rem; color: var(--color-text-tertiary); margin: 0;">
                                @workout.Date.ToString("dd/MM/yyyy HH:mm")
                            </p>
                            <p style="font-size: 0.875rem; color: var(--color-text-secondary); margin-top: 0.5rem;">
                                @workout.CompletedExercises.Count exercícios completados
                            </p>
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 2rem;">
                    <div style="font-size: 2.5rem; margin-bottom: 1rem;">???</div>
                    <p style="color: var(--color-text-tertiary);">Nenhum treino registrado</p>
                </div>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Minhas Rotinas</h3>
        </div>
        <div class="card-body">
            @if (isLoadingRoutines)
            {
                <div style="text-align: center; padding: 2rem;">
                    <div class="loading"></div>
                    <p style="margin-top: 1rem;">Carregando...</p>
                </div>
            }
            else if (routines.Any())
            {
                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    @foreach (var routine in routines)
                    {
                        <div style="padding: 1rem; background: var(--color-background-tertiary); border-radius: var(--border-radius); cursor: pointer;" 
                             @onclick="() => StartRoutine(routine)">
                            <h4 style="margin: 0 0 0.5rem 0;">@routine.Name</h4>
                            <p style="font-size: 0.875rem; color: var(--color-text-secondary); margin: 0;">
                                @routine.Description
                            </p>
                            <div style="display: flex; align-items: center; gap: 0.5rem; margin-top: 0.75rem;">
                                <span class="badge badge-primary">@routine.Exercises.Count exercícios</span>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 2rem;">
                    <div style="font-size: 2.5rem; margin-bottom: 1rem;">??</div>
                    <p style="color: var(--color-text-tertiary);">Nenhuma rotina criada</p>
                    <button class="btn btn-sm btn-primary" style="margin-top: 1rem;" @onclick="ManageRoutines">
                        Criar Rotina
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Biblioteca de Exercícios</h3>
        <button class="btn btn-sm btn-primary" @onclick="ManageExercises">
            + Novo Exercício
        </button>
    </div>
    <div class="card-body">
        @if (isLoadingExercises)
        {
            <div style="text-align: center; padding: 2rem;">
                <div class="loading"></div>
                <p style="margin-top: 1rem;">Carregando...</p>
            </div>
        }
        else if (exercises.Any())
        {
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 1rem;">
                @foreach (var exercise in exercises)
                {
                    <div style="padding: 1rem; background: var(--color-background-tertiary); border-radius: var(--border-radius);">
                        <h4 style="margin: 0 0 0.5rem 0; font-size: 1rem;">@exercise.Name</h4>
                        <div style="display: flex; flex-direction: column; gap: 0.25rem; font-size: 0.875rem;">
                            <span class="badge badge-primary" style="width: fit-content;">@exercise.MuscleGroup</span>
                            <span style="color: var(--color-text-tertiary);">@exercise.Equipment</span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div style="text-align: center; padding: 2rem;">
                <div style="font-size: 2.5rem; margin-bottom: 1rem;">??</div>
                <p style="color: var(--color-text-tertiary);">Nenhum exercício cadastrado</p>
            </div>
        }
    </div>
</div>

@code {
    private List<TrainingSession> recentWorkouts = new();
    private List<Routine> routines = new();
    private List<Exercise> exercises = new();
    private bool isLoadingWorkouts = true;
    private bool isLoadingRoutines = true;
    private bool isLoadingExercises = true;

    private int totalWorkouts => recentWorkouts.Count;
    private int weekWorkouts => recentWorkouts.Count(w => w.Date >= DateTime.Now.AddDays(-7));
    private int routinesCount => routines.Count;
    private int exercisesCount => exercises.Count;

    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(
            LoadWorkouts(),
            LoadRoutines(),
            LoadExercises()
        );
    }

    private async Task LoadWorkouts()
    {
        isLoadingWorkouts = true;
        try
        {
            var result = await GymService.GetTrainingSessionsAsync();
            if (result.Success && result.Data != null)
            {
                recentWorkouts = result.Data.OrderByDescending(w => w.Date).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading workouts: {ex.Message}");
        }
        finally
        {
            isLoadingWorkouts = false;
        }
    }

    private async Task LoadRoutines()
    {
        isLoadingRoutines = true;
        try
        {
            var result = await GymService.GetRoutinesAsync();
            if (result.Success && result.Data != null)
            {
                routines = result.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading routines: {ex.Message}");
        }
        finally
        {
            isLoadingRoutines = false;
        }
    }

    private async Task LoadExercises()
    {
        isLoadingExercises = true;
        try
        {
            var result = await GymService.GetExercisesAsync();
            if (result.Success && result.Data != null)
            {
                exercises = result.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading exercises: {ex.Message}");
        }
        finally
        {
            isLoadingExercises = false;
        }
    }

