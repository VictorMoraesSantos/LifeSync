@page "/gym"
@using LifeSyncApp.Client.Models.Gym
@using Syncfusion.Blazor.Navigations
@inject IGymService GymService

<PageTitle>Academia - LifeSync</PageTitle>

<RedirectToLogin>
    <PageHeader Title="Academia" Description="Gerencie seus treinos, rotinas e exercícios" />

    <div class="gym-container">
        <SfTab CssClass="gym-tabs" @ref="tabRef">
            <TabItems>
                <TabItem>
                    <ChildContent>
                        <TabHeader Text="Exercícios" />
                    </ChildContent>
                    <ContentTemplate>
                        <ExercisesTab />
                    </ContentTemplate>
                </TabItem>

                <TabItem>
                    <ChildContent>
                        <TabHeader Text="Rotinas" />
                    </ChildContent>
                    <ContentTemplate>
                        <RoutinesTab />
                    </ContentTemplate>
                </TabItem>

                <TabItem>
                    <ChildContent>
                        <TabHeader Text="Sessões" />
                    </ChildContent>
                    <ContentTemplate>
                        <SessionsTab />
                    </ContentTemplate>
                </TabItem>

                <TabItem>
                    <ChildContent>
                        <TabHeader Text="Dashboard" />
                    </ChildContent>
                    <ContentTemplate>
                        <GymDashboardTab />
                    </ContentTemplate>
                </TabItem>
            </TabItems>
        </SfTab>
    </div>
</RedirectToLogin>

<style>
    .gym-container {
        padding: 20px;
    }

    .gym-tabs {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-radius: 8px;
        background: #fff;
    }

        .gym-tabs .e-tab-header {
            background-color: #f8f9fa;
            border-radius: 8px 8px 0 0;
        }

            .gym-tabs .e-tab-header .e-toolbar-item.e-active {
                background-color: #fff;
                border-bottom: 3px solid #0d6efd;
            }

    .tab-icon {
        margin-right: 8px;
        font-size: 1.2em;
    }
</style>

@code {
    private SfTab? tabRef;
}
