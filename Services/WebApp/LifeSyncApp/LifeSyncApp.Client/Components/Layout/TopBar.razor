<div class="ls-topbar">
    <div style="display:flex;align-items:center;gap:.75rem;">
        <span style="font-weight:700;">@Title</span>
        @if (!string.IsNullOrWhiteSpace(SubTitle))
        {
            <span style="color:var(--text-secondary);font-size:.9rem;">@SubTitle</span>
        }
    </div>
    <div style="display:flex;align-items:center;gap:.75rem;">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "LifeSync";
    [Parameter] public string? SubTitle { get; set; } = "App";
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
