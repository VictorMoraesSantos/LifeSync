@inherits LayoutComponentBase

<div class="ls-app">
    <aside class="ls-sidebar">
        <div class="brand">
            <span class="dot"></span>
            <a class="nav-link" href="/" style="padding:0;gap:.5rem;color:var(--text);text-decoration:none;"><strong>LifeSync</strong></a>
        </div>
        <div class="nav-group">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">🏠 Dashboard</NavLink>
            <NavLink class="nav-link" href="/tasks">🗒️ Tarefas</NavLink>
            <NavLink class="nav-link" href="/nutrition">🥗 Nutrição</NavLink>
            <NavLink class="nav-link" href="/financial">💰 Financeiro</NavLink>
            <NavLink class="nav-link" href="/gym">🏋️ Academia</NavLink>
            <div class="nav-sep"></div>
            <NavLink class="nav-link" href="/logout">🚪 Sair</NavLink>
        </div>
    </aside>

    <div class="ls-main">
        <div class="ls-topbar">
            <div style="display:flex;align-items:center;gap:.75rem;">
                <span style="font-weight:700;">LifeSync</span>
            </div>
            <div style="display:flex;align-items:center;gap:.75rem;">
                <span style="color:var(--text-secondary);font-size:.9rem;">App</span>
            </div>
        </div>

        <main class="ls-content">
            @Body
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
