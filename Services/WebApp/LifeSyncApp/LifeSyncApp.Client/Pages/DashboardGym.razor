@page "/dashboard/gym"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inject IDashboardService DashboardService
@inject IAuthService AuthService

<PageTitle>Dashboard - Academia - LifeSync</PageTitle>

<div class="container-fluid mt-4">
    <h2 class="mb-4">Dashboard - Academia</h2>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
        </div>
    }
    else if (dashboard != null)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total de Sessões</h5>
                        <h2 class="mb-0">@dashboard.TotalSessions</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">Sessões este Mês</h5>
                        <h2 class="mb-0">@dashboard.SessionsThisMonth</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Duração Média</h5>
                        <h2 class="mb-0">@dashboard.AverageSessionDuration.ToString("F0") min</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total de Rotinas</h5>
                        <h2 class="mb-0">@dashboard.TotalRoutines</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
                        <h5>Sessões Semanais (Últimas 4 semanas)</h5>
                    </div>
                    <div class="card-body">
                        @if (dashboard.WeeklySessions.Any())
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Semana</th>
                                            <th>Sessões</th>
                                            <th>Duração Total (min)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var session in dashboard.WeeklySessions)
                                        {
                                            <tr>
                                                <td>@session.Week</td>
                                                <td><span class="badge bg-primary">@session.Sessions</span></td>
                                                <td>@session.TotalDuration.ToString("F0") min</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Nenhum dado disponível</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
                        <h5>Uso de Rotinas</h5>
                    </div>
                    <div class="card-body">
                        @if (dashboard.RoutineUsageStats.Any())
                        {
                            @foreach (var routine in dashboard.RoutineUsageStats)
                            {
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span><strong>@routine.RoutineName</strong></span>
                                        <span>@routine.UsageCount vezes</span>
                                    </div>
                                    <div class="small text-muted">Duração média: @routine.AverageDuration.ToString("F0") min</div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Nenhum dado disponível</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Exercises -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Estatísticas Gerais</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <p><strong>Total de Exercícios:</strong> @dashboard.TotalExercises</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>Total de Rotinas:</strong> @dashboard.TotalRoutines</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>Total de Sessões:</strong> @dashboard.TotalSessions</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private GymDashboardDto? dashboard;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            dashboard = await DashboardService.GetGymDashboardAsync(user.Id);
        }
        isLoading = false;
    }
}
