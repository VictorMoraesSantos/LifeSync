@page "/logout"
@using LifeSyncApp.Client.Services
@using LifeSyncApp.Client.Services.Contracts
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Saindo...</PageTitle>

<div class="auth-container">
    <div class="auth-card" style="text-align: center;">
        <div class="loading" style="width: 48px; height: 48px; border-width: 4px; margin: 0 auto 1.5rem;"></div>
        <h2>Saindo...</h2>
        <p style="color: var(--color-text-secondary);">Aguarde um momento</p>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", true);
    }
}
