@page "/dashboard/financial"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inject IDashboardService DashboardService
@inject IAuthService AuthService

<PageTitle>Dashboard - Financeiro - LifeSync</PageTitle>

<div class="container-fluid mt-4">
    <h2 class="mb-4">Dashboard - Financeiro</h2>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
        </div>
    }
    else if (dashboard != null)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Receitas</h5>
                        <h2 class="mb-0">R$ @dashboard.TotalIncome.ToString("F2")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Despesas</h5>
                        <h2 class="mb-0">R$ @dashboard.TotalExpenses.ToString("F2")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card @(dashboard.NetBalance >= 0 ? "bg-primary" : "bg-warning") text-white">
                    <div class="card-body">
                        <h5 class="card-title">Saldo Líquido</h5>
                        <h2 class="mb-0">R$ @dashboard.NetBalance.ToString("F2")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Total Transações</h5>
                        <h2 class="mb-0">@dashboard.TotalTransactions</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
                        <h5>Tendência Mensal (Últimos 6 meses)</h5>
                    </div>
                    <div class="card-body">
                        @if (dashboard.MonthlyTrend.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Mês</th>
                                            <th>Receitas</th>
                                            <th>Despesas</th>
                                            <th>Saldo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var trend in dashboard.MonthlyTrend)
                                        {
                                            var balance = trend.Income - trend.Expenses;
                                            <tr>
                                                <td>@trend.Month</td>
                                                <td class="text-success">R$ @trend.Income.ToString("F2")</td>
                                                <td class="text-danger">R$ @trend.Expenses.ToString("F2")</td>
                                                <td class="@(balance >= 0 ? "text-success" : "text-danger")">
                                                    R$ @balance.ToString("F2")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Nenhum dado disponível</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
                        <h5>Gastos por Categoria</h5>
                    </div>
                    <div class="card-body">
                        @if (dashboard.CategoryBreakdown.Any())
                        {
                            @foreach (var category in dashboard.CategoryBreakdown)
                            {
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span><strong>@category.CategoryName</strong></span>
                                        <span>R$ @category.Amount.ToString("F2") (@category.Percentage.ToString("F1")%)</span>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar" role="progressbar" style="width: @category.Percentage%" aria-valuenow="@category.Percentage" aria-valuemin="0" aria-valuemax="100">
                                            @category.Percentage.ToString("F1")%
                                        </div>
                                    </div>
                                    <small class="text-muted">@category.TransactionCount transações</small>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Nenhum dado disponível</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Methods -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Métodos de Pagamento</h5>
                    </div>
                    <div class="card-body">
                        @if (dashboard.PaymentMethodBreakdown.Any())
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Método</th>
                                            <th>Quantidade</th>
                                            <th>Valor Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var method in dashboard.PaymentMethodBreakdown)
                                        {
                                            <tr>
                                                <td>@method.PaymentMethod</td>
                                                <td>@method.Count</td>
                                                <td>R$ @method.Amount.ToString("F2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Nenhum dado disponível</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private FinancialDashboardDto? dashboard;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            dashboard = await DashboardService.GetFinancialDashboardAsync(user.Id);
        }
        isLoading = false;
    }
}
