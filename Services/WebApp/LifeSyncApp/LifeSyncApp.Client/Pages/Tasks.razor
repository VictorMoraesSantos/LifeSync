@page "/tasks"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inject ITaskManagerService TaskService
@inject IAuthService AuthService

<PageTitle>Tarefas - LifeSync</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Tarefas</h2>
        <button class="btn btn-primary" @onclick="ShowCreateModal">Nova Tarefa</button>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
        </div>
    }
    else if (tasks.Any())
    {
        <div class="row">
            @foreach (var task in tasks)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@task.Title</h5>
                            <p class="card-text">@task.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Vencimento: @task.DueDate.ToString("dd/MM/yyyy")</small>
                                <div>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => EditTask(task)">Editar</button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTask(task.Id)">Excluir</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Nenhuma tarefa encontrada.</div>
    }
</div>

<!-- Create/Edit Modal -->
@if (showModal)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingTask == null ? "Nova Tarefa" : "Editar Tarefa")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@taskForm" OnValidSubmit="@SaveTask">
                        <div class="mb-3">
                            <label class="form-label">Título</label>
                            <InputText @bind-Value="taskForm.Title" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descrição</label>
                            <InputTextArea @bind-Value="taskForm.Description" class="form-control" rows="3" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Prioridade</label>
                            <InputSelect @bind-Value="taskForm.Priority" class="form-select">
                                <option value="1">Baixa</option>
                                <option value="2">Média</option>
                                <option value="3">Alta</option>
                                <option value="4">Urgente</option>
                            </InputSelect>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Data de Vencimento</label>
                            <InputDate @bind-Value="dueDateInput" class="form-control" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TaskItemDto> tasks = new();
    private bool isLoading = true;
    private bool showModal = false;
    private TaskItemDto? editingTask = null;
    private CreateTaskItemRequest taskForm = new();
    private DateTime dueDateInput = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        isLoading = true;
        var user = await AuthService.GetCurrentUserAsync(); // ✅ ASYNC
        if (user != null)
        {
            var result = await TaskService.GetTaskItemsAsync(user.Id);
            if (result.Success && result.Data != null)
            {
                tasks = result.Data;
            }
        }
        isLoading = false;
    }

    private void ShowCreateModal()
    {
        editingTask = null;
        dueDateInput = DateTime.Now;
        taskForm = new CreateTaskItemRequest();
        showModal = true;
    }

    private void EditTask(TaskItemDto task)
    {
        editingTask = task;
        dueDateInput = task.DueDate.ToDateTime(TimeOnly.MinValue);
        taskForm = new CreateTaskItemRequest
        {
            Title = task.Title,
            Description = task.Description,
            Priority = task.Priority,
            DueDate = task.DueDate
        };
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        editingTask = null;
        taskForm = new CreateTaskItemRequest();
    }

    private async Task SaveTask()
    {
        var user = await AuthService.GetCurrentUserAsync(); // ✅ ASYNC
        if (user == null) return;

        taskForm.DueDate = DateOnly.FromDateTime(dueDateInput);

        if (editingTask == null)
        {
            taskForm.UserId = user.Id;
            var result = await TaskService.CreateTaskItemAsync(taskForm);
            if (result.Success)
            {
                await LoadTasks();
                CloseModal();
            }
        }
        else
        {
            var updateRequest = new UpdateTaskItemRequest
            {
                Title = taskForm.Title,
                Description = taskForm.Description,
                Priority = taskForm.Priority,
                DueDate = taskForm.DueDate,
                Status = editingTask.Status
            };
            var result = await TaskService.UpdateTaskItemAsync(editingTask.Id, updateRequest);
            if (result.Success)
            {
                await LoadTasks();
                CloseModal();
            }
        }
    }

    private async Task DeleteTask(int id)
    {
        if (await ConfirmDelete())
        {
            var result = await TaskService.DeleteTaskItemAsync(id);
            if (result.Success)
            {
                await LoadTasks();
            }
        }
    }

    private async Task<bool> ConfirmDelete()
    {
        // Simple confirmation - in production, use JSInterop for browser confirm
        return await Task.FromResult(true);
    }
}
