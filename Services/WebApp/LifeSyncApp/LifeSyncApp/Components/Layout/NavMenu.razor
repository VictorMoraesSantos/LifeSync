        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/nutrition">
                <span class="bi bi-graph-up" aria-hidden="true"></span> Dashboard Nutrição
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/financial">
                <span class="bi bi-graph-up" aria-hidden="true"></span> Dashboard Financeiro
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard/gym">
                <span class="bi bi-graph-up" aria-hidden="true"></span> Dashboard Academia
            </NavLink>
        </div>

        @* Login link moved to header *@
    </nav>
</div>

@code {
    private bool isAuthenticated;
    private string userInitials = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            var user = await AuthService.GetCurrentUserAsync();
            if (user != null)
            {
                var first = string.IsNullOrWhiteSpace(user.FirstName) ? string.Empty : user.FirstName.Trim()[0].ToString().ToUpperInvariant();
                var last = string.IsNullOrWhiteSpace(user.LastName) ? string.Empty : user.LastName.Trim()[0].ToString().ToUpperInvariant();
                userInitials = $"{first}{last}";
            }
        }
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        isAuthenticated = false;
        userInitials = string.Empty;
        Navigation.NavigateTo("/login", forceLoad: false);
    }
}