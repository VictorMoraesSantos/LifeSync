@inject LifeSyncApp.Client.Services.IAuthService AuthService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex align-items-center justify-content-between">
        <a class="navbar-brand" href="">LifeSync</a>
        <div>
            @if (isAuthenticated && !string.IsNullOrWhiteSpace(userInitials))
            {
                <div class="d-inline-flex align-items-center gap-3">
                    <div class="rounded-circle bg-primary text-white fw-bold d-flex align-items-center justify-content-center" style="width:36px;height:36px;">
                        @userInitials
                    </div>
                    <button class="btn btn-sm btn-outline-light" @onclick="Logout">Sair</button>
                </div>
            }
            else
            {
                <a class="btn btn-sm btn-outline-light" href="/login">Login</a>
            }
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
