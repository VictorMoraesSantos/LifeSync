{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "JwtSettings": {
    "Key": "SuperSecretKeyForJWTAuthentication2024!@#$%",
    "Issuer": "LifeSyncAPI",
    "Audience": "LifeSyncApp",
    "ExpiryMinutes": 60
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "taskmanager-route": {
        "ClusterId": "taskmanager-cluster",
        //"AuthorizationPolicy": "RequireAuthentication",
        "Match": {
          "Path": "/taskmanager-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/taskmanager-service" },
          { "PathPrefix": "/api" }
        ]
      },
      "nutrition-route": {
        "ClusterId": "nutrition-cluster",
        //"AuthorizationPolicy": "RequireAuthentication",
        "Match": {
          "Path": "/nutrition-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/nutrition-service" },
          { "PathPrefix": "/api" }
        ]
      },
      "financial-route": {
        "ClusterId": "financial-cluster",
        //"AuthorizationPolicy": "RequireAuthentication",
        "Match": {
          "Path": "/financial-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/financial-service" },
          { "PathPrefix": "/api" }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPrefix": "/api" }
        ]
      },
      "gym-route": {
        "ClusterId": "gym-cluster",
        //"AuthorizationPolicy": "RequireAuthentication",
        "Match": {
          "Path": "/gym-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/gym-service" },
          { "PathPrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "taskmanager-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://taskmanager-api:80"
          }
        }
      },
      "nutrition-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://nutrition-api:80"
          }
        }
      },
      "financial-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://financial-api:80"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://users-api:80"
          }
        }
      },
      "gym-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://gym-api:80"
          }
        }
      }
    }
  }
}
