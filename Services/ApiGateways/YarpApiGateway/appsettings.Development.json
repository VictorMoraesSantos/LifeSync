{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "Key": "SuperSecretKeyForJWTAuthentication2024!@#$%",
    "Issuer": "LifeSyncAPI",
    "Audience": "LifeSyncApp",
    "ExpiryMinutes": 60
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "taskmanager-route": {
        "ClusterId": "taskmanager-cluster",
        "AuthorizationPolicy": "RequireAuthentication",
        "Match": {
          "Path": "/taskmanager-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "nutrition-route": {
        "ClusterId": "nutrition-cluster",
        "AuthorizationPolicy": "RequireAuthentication",
        "Match": {
          "Path": "/nutrition-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "financial-route": {
        "ClusterId": "financial-cluster",
        "AuthorizationPolicy": "RequireAuthentication",
        "Match": {
          "Path": "/financial-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/users-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/users-service"
          },
          {
            "PathPrefix": "/api"
          }
        ]
      },
      "gym-route": {
        "ClusterId": "gym-cluster",
        "AuthorizationPolicy": "RequireAuthentication",
        "Match": {
          "Path": "/gym-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "taskmanager-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://taskmanager.api:8080"
          }
        }
      },
      "nutrition-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://nutrition.api:8080"
          }
        }
      },
      "financial-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://financial.api:8080"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://users.api:8080"
          }
        }
      },
      "gym-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://gym.api:8080"
          }
        }
      }
    }
  }
}
