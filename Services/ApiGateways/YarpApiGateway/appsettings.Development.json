{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "taskmanager-route": {
        "ClusterId": "taskmanager-cluster",
        "Match": { "Path": "/taskmanager-service/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "nutrition-route": {
        "ClusterId": "nutrition-cluster",
        "Match": { "Path": "/nutrition-service/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "financial-route": {
        "ClusterId": "financial-cluster",
        "Match": { "Path": "/financial-service/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": { "Path": "/users-service/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "gym-route": {
        "ClusterId": "gym-cluster",
        "Match": { "Path": "/gym-service/{**catch-all}" },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "taskmanager-cluster": {
        "Destinations": {
          "docker": { "Address": "http://taskmanager.api:8080" }
        }
      },
      "nutrition-cluster": {
        "Destinations": {
          "docker": { "Address": "http://nutrition.api:8080" }
        }
      },
      "financial-cluster": {
        "Destinations": {
          "docker": { "Address": "http://financial.api:8080" }
        }
      },
      "users-cluster": {
        "Destinations": {
          "docker": { "Address": "http://users.api:8080" }
        }
      },
      "gym-cluster": {
        "Destinations": {
          "docker": { "Address": "http://gym.api:8080" }
        }
      }
    }
  }
}
