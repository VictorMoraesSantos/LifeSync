{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "Key": "your_very_long_secret_key_here_which_should_be_at_least_32_chars",
    "Issuer": "YourIssuer",
    "Audience": "YourAudience",
    "ExpiryMinutes": 120,
    "RefreshTokenExpiryDays": 7
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "taskmanager-route": {
        "ClusterId": "taskmanager-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/taskmanager/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "nutrition-route": {
        "ClusterId": "nutrition-cluster",
        "Match": {
          "Path": "/nutrition/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "financial-route": {
        "ClusterId": "financial-cluster",
        "Match": {
          "Path": "/financial/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "gym-route": {
        "ClusterId": "gym-cluster",
        "Match": {
          "Path": "/gym/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "taskmanager-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://taskmanager.api:8080"
          }
        }
      },
      "nutrition-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://nutrition.api:8080"
          }
        }
      },
      "financial-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://financial.api:8080"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://users.api:8080"
          }
        }
      },
      "gym-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://gym.api:8080"
          }
        }
      }
    }
  }
}
